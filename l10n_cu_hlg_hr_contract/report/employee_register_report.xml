                file="vacancies"
                attachment_use="True"/>

        <template id="vacancies">
            <t t-call="report.html_container">

                <t t-call="report.external_layout">
                    <div class="page">
                        <h2>Plazas vacantes</h2>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Puesto</th>
                                    <th>Cat. Ocupacional</th>
                                    <th class="text-right">Vacantes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="depart" t-value="''"/>
                                <t t-set="subtotal" t-value="0"/>
                                <t t-set="total" t-value="0"/>
                                <t t-foreach="obj_list" t-as="item">
                                    <t t-if="item.get('department') != depart">
                                        <t t-if="subtotal != 0">
                                            <tr>
                                                <td colspan="3" style="font-weight: bold;">
                                                    sub total:
                                                </td>
                                                <td colspan="3" style="font-weight: bold;" align="right">
                                                    <t t-esc="subtotal"/>
                                                </td>
                                            </tr>
                                        </t>

                                        <tr>
                                            <td colspan="4" style="font-weight: bold;">
                                                Departamento:
                                                <t t-esc="item.get('department')"/>
                                            </td>
                                        </tr>
                                        <t t-set="subtotal" t-value="0"/>
                                    </t>
                                    <tr>
                                        <td>
                                            <t t-esc="item.get('job')"/>
                                        </td>
                                        <td>
                                            <t t-esc="item.get('scale')"/>
                                        </td>
                                        <td>
                                            <t t-esc="item.get('category')"/>
                                        </td>
                                        <td align="right">
                                            <t t-esc="item.get('cantidad')"/>
                                        </td>
                                    </tr>
                                    <t t-set="depart" t-value="item.get('department')"/>
                                    <t t-set="subtotal" t-value="subtotal + item.get('cantidad')"/>
                                    <t t-set="total" t-value="total + item.get('cantidad')"/>
                                </t>
                                <t t-if="subtotal != 0">
                                    <tr>
                                        <td colspan="3" style="font-weight: bold;">
                                            sub total:
                                        </td>
                                        <td colspan="3" style="font-weight: bold;" align="right">
                                            <t t-esc="subtotal"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="3" style="font-weight: bold;">Total</td>
                                    <td style="font-weight: bold;" align="right">
                                        <t t-esc="total"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </t>
            </t>
        </template>

