                                               <t t-esc="item.get(col)"/>
                                            </td>
                                        </t>


                                        <td align="right">
                                            <t t-esc="get_cal_porciento( item.get('approced'), item.get('cover'))"/>
                                        </td>

                                    </tr>
                                    <t t-set="tcubierta" t-value="tcubierta + item.get('cover')"/>
                                    <t t-set="tapproced" t-value="tapproced + item.get('approced')"/>

