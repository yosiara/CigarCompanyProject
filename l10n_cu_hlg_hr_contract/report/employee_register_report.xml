        <template id="qualified_workforce">
            <t t-call="report.html_container">

                <t t-call="report.external_layout">
                    <div class="page">
                        <h2>Fuerza de trabajo calificada</h2>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Categoría</th>
                                    <th style="align-text">Aprobada</th>
                                    <th class="text-right">Cubierta</th>

                                    <t t-foreach="school_level_thead" t-as="col">
                                       <th class="text-right"> <t t-esc="col.name"/> </th>
                                    </t>

                                    <th class="text-right">%</th>
                                </tr>
                            </thead>
                            <tbody>

                                <t t-set="tcubierta" t-value="0"/>
                                <t t-set="tapproced" t-value="0"/>
                                <t t-set="total[0]" t-value="0"/>


                                <t t-foreach="obj_list" t-as="item">
                                    <tr>
