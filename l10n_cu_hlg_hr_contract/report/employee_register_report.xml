                                            <t t-esc="item.get('category')"/>
                                        </td>
                                        <td align="right">
                                            <t t-esc="item.get('approced')"/>
                                        </td>
                                        <td align="right">
                                            <t t-esc="item.get('cover')"/>
                                        </td>

                                        <t t-foreach="school_level_col" t-as="col">
